@charset "UTF-8"
@import "src/normalize"

$backgroundColor        = #343434
$textColor              = #fff
$linkColor              = #D9E85F
$linkBorderColor        = #999
$titlesColor            = #bbb
$titlesBorderColor      = #444
$imgCaptionColor        = darken($textColor, 20)
$articleHeaderColor     = #bbb
$footerBorderColor      = #444
$separatorBorderColor   = #fff

transition
    -moz-transition    arguments
    -webkit-transition arguments
    -o-transition      arguments
    transition         arguments
    
@font-face
  font-family "Open Sans"
  font-style normal
  src url(https://cdn.rawgit.com/oz/cyprio.net/master/fonts/opensans/OpenSans-Regular.ttf)

